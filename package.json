{
  "name": "notes-app-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prettify": "prettier --write \"**/*.{ts,md,json,js,mjs}\"",
    "lint:editor": "editorconfig-checker",
    "lint:prettify": "prettier --check \"**/*.{ts,md,json,js,mjs}\"",
    "lint:type": "npx tsc --noEmit",
    "lint:js": "npx eslint \"src/**/*.ts\"",
    "lint:all": "npm run lint:editorconfig && npm run lint:prettify && npm run lint:type && npm run lint:js"
  },
  "dependencies": {
    "@nestjs/common": "10.1.3",
    "@nestjs/core": "10.1.3",
    "@nestjs/platform-express": "10.1.3",
    "@nestjs/platform-fastify": "10.1.3",
    "@prisma/client": "5.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@nestjs/cli": "10.1.11",
    "@nestjs/schematics": "10.0.1",
    "@types/express": "4.17.17",
    "@types/node": "20.4.5",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "editorconfig-checker": "5.1.1",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-prettier": "5.0.0",
    "prettier": "3.0.0",
    "prisma": "5.0.0",
    "simple-git-hooks": "2.9.0",
    "source-map-support": "0.5.21",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6"
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1",
    "pre-commit": "npx lint-staged"
  }
}
