{
  "name": "notes-app-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && cp -r public dist/",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "seed": "ts-node prisma/seeds/seed.ts",
    "migrate:dev": "prisma migrate dev",
    "migrate:reset": "prisma migrate reset",
    "prettify": "prettier --write \"**/*.{ts,md,json,js,mjs}\"",
    "lint:editor": "editorconfig-checker",
    "lint:prettify": "prettier --check \"**/*.{ts,md,json,js,mjs}\"",
    "lint:type": "npx tsc --noEmit",
    "lint:js": "npx eslint \"src/**/*.ts\"",
    "lint:all": "npm run lint:editor && npm run lint:prettify && npm run lint:type && npm run lint:js",
    "start:migrate:prod": "prisma migrate deploy && npm run seed && npm run start:prod"
  },
  "dependencies": {
    "@fastify/static": "6.10.2",
    "@nestjs/common": "10.1.3",
    "@nestjs/core": "10.1.3",
    "@nestjs/platform-express": "10.1.3",
    "@nestjs/platform-fastify": "10.1.3",
    "@nestjs/serve-static": "4.0.0",
    "@nestjs/swagger": "7.1.4",
    "@prisma/client": "5.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "swagger-ui-dist": "5.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@faker-js/faker": "8.0.2",
    "@nestjs/cli": "10.1.11",
    "@nestjs/schematics": "10.0.1",
    "@types/express": "4.17.17",
    "@types/node": "20.4.5",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "editorconfig-checker": "5.1.1",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-sonarjs": "0.19.0",
    "eslint-plugin-unicorn": "48.0.1",
    "prettier": "3.0.0",
    "prisma": "5.0.0",
    "simple-git-hooks": "2.9.0",
    "source-map-support": "0.5.21",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsc-alias": "1.8.7",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6",
    "zod": "3.21.4"
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1",
    "pre-commit": "npx lint-staged"
  }
}
